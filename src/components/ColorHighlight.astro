---
export interface Props {
  color?: string;
  highlight?: 'bg' | 'fg' | 'format' | 'lightBg';
  fontWeight?: string;
  textDecoration?: string;
  fontStyle?: string;
  textAlign?: string;
}

const {
  color = '#ffeb3b',
  highlight = 'bg',
  fontWeight = 'normal',
  textDecoration = 'none',
  fontStyle = 'normal',
  textAlign = 'left'
} = Astro.props;

const slot = await Astro.slots.render('default');
---

{highlight === 'fg' && (
  <span
    style={{
      color,
      fontWeight,
      textDecoration,
      fontStyle
    }}
    set:html={slot}
  />
)}

{highlight === 'format' && (
  <div
    style={{
      textAlign,
      color,
      fontWeight,
      textDecoration,
      fontStyle
    }}
    set:html={slot}
  />
)}

{highlight === 'lightBg' && (
  <span
    style={{
      backgroundColor: color,
      borderRadius: '4px',
      color: '#4B0082',
      padding: '0.2rem'
    }}
    set:html={slot}
  />
)}

{highlight === 'bg' && (
  <span
    style={{
      backgroundColor: color,
      borderRadius: '4px',
      color: '#fff',
      padding: '0.2rem'
    }}
    set:html={slot}
  />
)}