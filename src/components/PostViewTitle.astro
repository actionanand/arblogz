---
import {formatDate} from "@/utils/formatDate";
import {dealLabel} from "@/utils/dealLabel";
import {t} from '@/i18n/utils'
import getUrl from "@/utils/getUrl";
const {title, date, slug, category, tags, sticky = false, draft = false} = Astro.props
---

<div class="text-skin-base">
  <!-- title -->
  <div class="flex items-center">
    {sticky > 0 &&
      <div class="post-sticky select-none group relative flex items-center">
        <span class="sticky-pin" aria-hidden="true"></span>
        <span class="absolute left-full top-1/2 -translate-y-1/2 ml-2 px-2 py-1 rounded bg-skin-fill text-xs text-skin-base opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10 shadow-lg pointer-events-none" data-translate="home.sticky">{t('home.sticky')}</span>
      </div>}
      <a class="flex text-xl font-bold hover:text-skin-active transition-colors" href={slug}>
        {title}
      </a>
  </div>

  <div class="flex flex-wrap items-center my-2 text-skin-dodge">
    <!--date -->
    {
      date &&
      <div class="mr-2"><i class="ri-calendar-2-fill mr-1"/>{formatDate(date)}</div>
    }

    <!-- draft -->
    {
      draft &&
      <div class="mr-2"><i class="ri-git-pr-draft-line mr-1"/><span data-translate="title.draft">{t('title.draft')}</span></div>
    }

    <!-- category -->
    {
      category && dealLabel(category).filter(item => item !== 'uncategorized').map((categoryName) =>
        <a href={getUrl("/category/") + categoryName} class="text-wrap break-all hover:text-skin-active mr-2 px-2 py-1 rounded transition-colors">
          <i class="ri-folder-3-line"/>
          {categoryName}
        </a>
      )
    }

    <!-- tag -->
    {
      tags && dealLabel(tags).map((tagName) =>
        <a href={getUrl("/tags/") + tagName} class="text-wrap break-all hover:text-skin-active mr-2 px-2 py-1 rounded transition-colors">
          <i class="ri-hashtag"/>{tagName}</a>
      )
    }
  </div>
</div>
