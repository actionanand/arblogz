---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import {config} from "@/consts";
---

<html lang={config.lang}>
<BaseHead title={Astro.props.title} />

<body class="bg-skin-secondary relative">
<Header/>
<main class="container mx-auto p-4 pt-20 text-skin-base pb-32 min-h-full relative max-w-4xl" id="app">
  <div class="w-full">
    <slot></slot>
  </div>
  <Footer/>
</main>
</body>
<script>
  document.body.querySelectorAll("a").forEach(item => {
    item.setAttribute("rel", "nofollow noreferrer");
  });
</script>
</html>